{
	"name": "starfishprime/typo3-templates",
	"type": "typo3-cms-extension",
	"description": "Modal gesture for TYPO3.",
	"license": [
		"GPL-2.0-or-later"
	],
	"homepage": "https://needtocreateawebsiteforthis.org",
	"keywords": [
		"TYPO3",
		"templates",
		"backend",
		"frontend"
	],
	"authors": [
		{
			"name": "Vincent Kolly",
			"role": "Developer",
			"email": "vincent@vincentk.ch",
			"homepage": "http://www.vincentk.ch"
		}
	],
	"config": {
		"sort-packages": true,
		"discard-changes": true,
		"optimize-autoloader": true,
		"vendor-dir": ".build/vendor"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/TYPO3-Initiatives/dashboard.git"
		},
		{
			"type": "vcs",
			"url": "https://github.com/bihor/backendtools.git"
		},
		{
			"type": "vcs",
			"url": "https://github.com/benjaminkott/easy_content.git"
		}


	],
	"require": {
		"php": ">=7.3.0",
		"bk2k/easy-content": "dev-master",
		"fixpunkt/backendtools": "^1.5.0",
		"friendsoftypo3/dashboard": "^1.0",
		"typo3/cms-backend": "10.2.*@dev",
		"typo3/cms-core": "10.2.*@dev",
		"typo3/cms-extbase": "10.2.*@dev",
		"typo3/cms-extensionmanager": "10.2.*@dev",
		"typo3/cms-felogin": "10.2.*@dev",
		"typo3/cms-fluid": "10.2.*@dev",
		"typo3/cms-form": "10.2.*@dev",
		"typo3/cms-frontend": "10.2.*@dev",
		"typo3/cms-info": "10.2.*@dev",
		"typo3/cms-install": "10.2.*@dev",
		"typo3/cms-rte-ckeditor": "10.2.*@dev",
		"typo3/cms-seo": "10.2.*@dev",
		"typo3/cms-styleguide": "^10.0",
		"typo3/cms-tstemplate": "10.2.*@dev"
	},
	"require-dev": {
		"typo3/coding-standards": "dev-master",
		"typo3/testing-framework": "^6.1.0",
		"overtrue/phplint": "^1.2.1",
		"friendsofphp/php-cs-fixer": "^2.3.1"
	},
	"autoload": {
		"psr-4": {
			"Starfishprime\\Templates\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Starfishprime\\Templates\\Tests\\": "Tests"
		}
	},
	"scripts": {
		"test:php:lint": [
			".build/bin/phplint"
		],
		"test:php:unit": [
			".build/bin/phpunit -c .phpunit.xml"
		],
		"test:php": [
			"@test:php:lint",
			"@test:php:unit"
		],
		"cgl": [
			".build/bin/php-cs-fixer --diff -v fix"
		],
		"package-states": [
			".build/bin/typo3 install:generatepackagestates"
		],
		"folder-structure": [
			"mkdir -p .build/public/typo3conf/ext/",
			"[ -L .build/public/typo3conf/ext/templates ] || ln -snvf ../../../../. .build/public/typo3conf/ext/templates"
		],
		"prepare-extension-test-structure": [
			"TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
		],
		"setup-cgl": [
			"php .ddev/scripts/coding-standard-setup.php extension"
		],
		"post-autoload-dump": [
			"@setup-cgl",
			"@cgl",
			"@folder-structure",
			"@prepare-extension-test-structure"
		]
	},
	"prefer-stable": true,
	"minimum-stability": "dev",
	"extra": {
		"typo3/cms": {
			"web-dir": ".build/public",
			"app-dir": ".build",
			"extension-key": "templates",
			"cms-package-dir": "{$vendor-dir}/typo3/cms"
		}
	}
}
