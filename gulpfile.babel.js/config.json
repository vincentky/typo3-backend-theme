{
	"stylelint": {
		"failAfterError": true,
		"reportOutputDir": ".reports",
		"reporters": [
			{
				"formatter": "verbose",
				"console": true
			},
			{
				"formatter": "json",
				"save": "stylelint.json"
			}
		],
		"debug": true
	},
	"paths": {
		"src": {
			"themes": "./Resources/Private/Assets/Themes"
		},
		"dest": {
			"css": "./Resources/Public/Css",
			"icons": "./Resources/Public/Icons",
			"images": "./Resources/Public/Images",
			"js": "./Resources/Public/JavaScript",
			"definitions": "./Resources/Public/def"
		}
	},
	"FILES_EXTENSIONS": {
		"Scss": "scss",
		"TypeScript": "ts"
	},
	"includePaths": [
		"Resources/Private/Assets/Themes/Default/Scss",
		"node_modules",
		"node_modules/bootstrap-sass/assets/stylesheets",
		"node_modules/font-awesome/scss",
		"node_modules/eonasdan-bootstrap-datetimepicker/src/sass"
	]
}
